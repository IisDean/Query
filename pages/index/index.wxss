  /* height: 200px; */
}
.progress-container {
  position: relative;
  margin: 30px auto 0;
  padding: 0 12px;
  width: 80%;
}
.progress-node {
   top: 0; 
}
.node-wrap {
  margin-top: -8px;
  width: 16px;
  height: 16px;
  border-radius: 99px; 
  border: 2px solid #a6a5a5;
  background-color: #dcdcdc; 
  line-height: 16px;
  color: #a6a5a5;
}
.node-wrap.active {
  background-color: #0a8cfe;
  border-color: #0a8cfe;
  color: #fff;
}
/* 表单 */
.form-container {
  margin: 30px auto 0;
  padding: 0 12px;
  width: 80%;
  overflow: hidden;
}
.section-wrap {
  padding: 0 10px;
  width: 100%;
  height: 35px;
  line-height: 35px;
  border: 1px solid #bfbfbf;
  background-color: #eee;
  box-sizing: border-box;
}
.form-container .section-wrap,.section-wrap input {
  margin-bottom: 20px;
}
.form-container .section-wrap:last-child {
  margin-bottom: 0;
}
.section-wrap picker,.section-wrap .picker,.section-wrap picker,.section-wrap input {
  width: 100%;
  height: 100%;
  font-size: 12px;
}
.tips-text {
  color: #828181;
}
.location-icon {
  margin: 20px auto 0;
  width: 90rpx;
  height: 137rpx;
}
.location-text {
  margin: 15px auto 0;
}
/* 按钮 */
.btn-container {
  margin-top: 20px;
}
.btn-wrap {
  background-color: #0182ff !important;
}
.btn-container .btn-wrap {
  margin-left: 15px;
}
.btn-container .btn-wrap:first-child {
  margin-left: 0;
}
.btn-click {
  background-color: #1599fd;
}